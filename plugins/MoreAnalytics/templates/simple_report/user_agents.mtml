<mt:SetVar name="widget_id" value="user-agents">
<mt:SetVar name="widget_title" value="<__trans phrase='User Agents'>">
<mt:SetVarTemplate name="widget_template">

  <mt:GAReport dimensions="operatingSystem,browser" metrics="visits" max_results="$agent_lines" sort="-visits">
    <mt:GAReportHeader>
      <table class="table table-striped">
        <thead>
          <tr>
            <th><__trans phrase="OS"></th>
            <th><__trans phrase="Browser"></th>
            <th class="num"><__trans phrase="Visits"></th>
            <th class="num"><__trans phrase="Percentage"></th>
          </tr>
        </thead>
        <tbody>
    </mt:GAReportHeader>

          <tr>
            <td class="wrap"><$mt:GAValue name="operatingSystem" escape="html"$></td>
            <td class="wrap"><$mt:GAValue name="browser" escape="html"$></td>
            <td class="num"><$mt:GAValue name="visits" comma="1" escape="html"$></td>
            <td class="num"><$mt:GAValue name="visits" percentage="total" escape="html"$></td>
          </tr>          

    <mt:GAReportFooter>
          <tr class="rest">
            <td colspan="2"><__trans phrase="Rest"></td>
            <td class="num"><$mt:GARest name="visits" comma="1" escape="html"$></td>
            <td class="num"><$mt:GARest name="visits" percentage="total" escape="html"$></td>
          </tr>

        </tbody>

        <tfoot>

          <tr class="total">
            <td colspan="2"><__trans phrase="Total"></td>
            <td class="num"><$mt:GATotal name="visits" comma="1" escape="html"$></td>
            <td class="num"><$mt:GATotal name="visits" percentage="total" escape="html"$></td>
          </tr>

        </tfoot>
      </table>

      <$mt:GATotal name="visits" setvar="total"$>
    </mt:GAReportFooter>
  </mt:GAReport>

      <h4><__trans phrase="Internet Explorer"></h4>

  <mt:GAReport dimensions="browser,browserVersion" metrics="visits" max_results="$table_lines" sort="-visits" filters="browser=@Explorer">

    <mt:GAReportHeader>
      <table class="table table-striped">
        <thead>
          <tr>
            <th class="num"><__trans phrase="Ver."></th>
            <th class="num"><__trans phrase="Visits"></th>
            <th class="num"><__trans phrase="Percentage"></th>
          </tr>
        </thead>
        <tbody>
    </mt:GAReportHeader>

          <tr>
            <td class="num"><$mt:GAValue name="browserVersion" escape="html"$></td>
            <td class="num"><$mt:GAValue name="visits" comma="1" escape="html"$></td>
            <td class="num"><$mt:GAValue name="visits" percentage="total" escape="html"$></td>
          </tr>          

    <mt:GAReportFooter>
        </tbody>
      </table>
    </mt:GAReportFooter>

  </mt:GAReport>

</mt:SetVarTemplate>

<$mt:Include module="<__trans phrase='Compared Report Widget'>"$>
